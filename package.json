{
  "name": "ship-it",
  "version": "1.0.0",
  "description": "AI-powered development system similar to Spotify's Honk",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format --write",
    "format:check": "biome format",
    "check": "biome check",
    "check:fix": "biome check --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:config": "node scripts/test-config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clafollett/ship-it.git"
  },
  "keywords": [
    "ai",
    "code-generation",
    "claude",
    "anthropic",
    "slack-bot",
    "automation",
    "developer-tools",
    "typescript",
    "github-integration"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/clafollett/ship-it/issues"
  },
  "homepage": "https://github.com/clafollett/ship-it#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@octokit/rest": "^22.0.1",
    "@slack/bolt": "^4.6.0",
    "dotenv": "^17.3.1",
    "simple-git": "^3.31.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@types/node": "^25.2.3"
  }
}
